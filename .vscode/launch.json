{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Backend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/back",
      "console": "integratedTerminal",
      "preLaunchTask": "clearConsole"
    },
    {
      "name": "Frontend",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/front",
      "console": "integratedTerminal",
      "preLaunchTask": "clearConsole"
    },
    {
      "name": "Browser Start",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/front/src"
    }
  ],
  "compounds": [
    {
      "name": "‚ù§ ALL",
      "configurations": [
        "Backend",
        "Frontend",
        "Browser Start"
      ],
      "stopAll": true
    }
  ]
}